<!doctype html>
<html>
    <head>
        <title>Login</title>
    </head>
    <body>
        <form action="/login" method="post">
            <div>
            <label>Username:</label>
            <input id="uname" type="text" name="username" autofocus/><br/>
            </div>
            <div>
            <label>Password:</label>
            <input type="password" name="password"/>
            </div>
            <div>
            <input type="submit" value="Submit"/>
            </div>
        </form>
        <% if (messages.length) { %><p style="color: red"><%= messages[0] %><p><% } %>
    </body>
</html>
