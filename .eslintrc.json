{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jquery": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "linebreak-style": ["warn", "unix"],
    "no-else-return": "warn",
    "consistent-return": "warn",
    "no-console": "off",
    "no-extra-parens": "warn",
    "arrow-body-style": ["warn", "as-needed"],
    "no-var": "warn",
    "arrow-spacing": "warn"
  }
}
